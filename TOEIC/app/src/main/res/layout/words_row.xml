    <TextView
        android:id="@+id/txWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#393E46"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgWord"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txPhonetic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="6dp"
        android:text="TextView"
        android:textColor="#FFFCFC"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/txTypeWord"
        app:layout_constraintStart_toEndOf="@+id/imgWord"
        app:layout_constraintTop_toBottomOf="@+id/txWord"
        app:layout_constraintVertical_bias="0.473" />

    <TextView
        android:id="@+id/txTypeWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
